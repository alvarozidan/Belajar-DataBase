mysql> create database perpustakaan; //create = buat db perpustakaan

mysql> use perpustakaan //use = masuk ke dalam db perpustakaan
Database changed
mysql> create table buku( //create = buat tabel buku di dalam db perpustakaan
    -> id_buku INT AUTO_INCREMENT PRIMARY KEY,
    -> judul VARCHAR(100),
    -> penulis VARCHAR(50),
    -> tahun_terbit INT,
    -> penerbit VARCHAR(50));

mysql> insert into buku(judul, penulis, tahun_terbit, penerbit) values //insert into masukin data ke dalam tabel buku
    -> ('Pemrograman SQL', 'Andi', 2020, 'Gramedia'),
    -> ('Database Fundamentals', 'Budi', 2019, 'Erlangga'),
    -> ('Data Science', 'Cahyo', 2021, 'Tech Press'),
    -> ('Machine Learning', 'Deni', 2022, 'Pustaka Jaya'),
    -> ('Web Development', 'Eka', 2023, 'Indo Book');

mysql> select * from buku; //SELECT * nampilin semua data yang ada di dalem tabel buku
+---------+-----------------------+---------+--------------+--------------+
| id_buku | judul                 | penulis | tahun_terbit | penerbit     |
+---------+-----------------------+---------+--------------+--------------+
|       1 | Pemrograman SQL       | Andi    |         2020 | Gramedia     |
|       2 | Database Fundamentals | Budi    |         2019 | Erlangga     |
|       3 | Data Science          | Cahyo   |         2021 | Tech Press   |
|       4 | Machine Learning      | Deni    |         2022 | Pustaka Jaya |
|       5 | Web Development       | Eka     |         2023 | Indo Book    |
+---------+-----------------------+---------+--------------+--------------+

mysql> UPDATE buku SET judul='Data Science untuk Pemula', penulis='Cahyo Utomo' WHERE id_buku=3; //UPDATE=buat ngubah data di dalem tabel buku, set= apa yang mau diubah WHERE= yang diubah yang mana

