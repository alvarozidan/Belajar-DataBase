|       3 | Data Science untuk Pemula | Cahyo Utomo |         2021 | Tech Press |
+---------+---------------------------+-------------+--------------+------------+

mysql> create table penulis( //buat  tabel penulis sama isine
    -> id_Penulis INT AUTO_INCREMENT PRIMARY KEY,
    -> nama_penulis varchar(50),
    -> negara_asal varchar(50));

mysql> insert into penulis(nama_penulis, negara_asal) values //ngisi tabel penulis
    -> ('Andi', 'Indonesia'),
    -> ('Budi', 'Indonesia'),
    -> ('Cahyo', 'Indonesia');

mysql> alter table buku add column id_penulis int; //nambah kolom id_penulis di tabel buku

mysql> update buku set id_penulis=1 where id_buku=1; //ngubah data tabel buku kalau id_buku = 1 berarti id_Penulis juga 1, ini biar bisa inisialisasi nama penulis sesuai id

mysql> SELECT buku.id_buku, buku.judul, buku.tahun_terbit, buku.penerbit, penulis.nama_penulis FROM buku JOIN penulis ON buku.id_penulis = penulis.id_Penulis;
+---------+-----------------+--------------+----------+--------------+
| id_buku | judul           | tahun_terbit | penerbit | nama_penulis |
+---------+-----------------+--------------+----------+--------------+
|       1 | Pemrograman SQL |         2020 | Gramedia | Andi         |
+---------+-----------------+--------------+----------+--------------+
1 row in set (0.00 sec)

mysql> select * from buku; //disini data id_Penulis cuma id 1 yang lain e null gara gara yang di inisialisasi cuma id= 1
+---------+---------------------------+-------------+--------------+--------------+------------+
| id_buku | judul                     | penulis     | tahun_terbit | penerbit     | id_penulis |
+---------+---------------------------+-------------+--------------+--------------+------------+
|       1 | Pemrograman SQL           | Andi        |         2020 | Gramedia     |          1 |
|       2 | Database Fundamentals     | Budi        |         2019 | Erlangga     |       NULL |
|       3 | Data Science untuk Pemula | Cahyo Utomo |         2021 | Tech Press   |       NULL |
|       4 | Machine Learning          | Deni        |         2022 | Pustaka Jaya |       NULL |
+---------+---------------------------+-------------+--------------+--------------+------------+

mysql> update buku set id_penulis=2 where id_buku=2; //jadi buat update ditambahi id 2 - 4

mysql> update buku set id_penulis=3 where id_buku=3;

mysql> update buku set id_penulis=4 where id_buku=4;

mysql> select * from buku; //cek data tabel buku id penulis udah gak null
